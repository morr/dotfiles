{
  "permissions": {
    "allow": [
      "Bash(gh run view:*)",
      "Bash(gh pr view:*)",
      "Bash(gh repo view:*)",
      "Bash(gh api repos/*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git status:*)",
      "Bash(git rebase:*)",
      "Bash(git stash pop:*)",
      "Bash(git stash:*)",
      "Bash(git cherry-pick:*)",
      "Bash(git checkout:*)",
      "Bash(git rm:*)",
      "Bash(git log:*)",
      "Bash(git mv:*)",
      "Bash(git diff:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(nvim:*)",
      "Read(~/dotfiles/**)",
      "Read(~/.claude/**)"
    ],
    "additionalDirectories": [
      "/tmp/99"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/dotfiles/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "rust-analyzer-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true
  }
}
